<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/medicationName_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="Name"
        android:textColor="#010101"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicationQuantity_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="QTY"
        android:textColor="#010101"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicationRefills_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="Refills"
        android:textColor="#010101"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RSX_textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="@android:string/status_bar_notification_info_overflow"
        android:textColor="#010101"
        android:textStyle="bold"
        tools:text="RSX" />

</LinearLayout>